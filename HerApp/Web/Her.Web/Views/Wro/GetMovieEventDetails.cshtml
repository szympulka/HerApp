@model Her.ViewModel.WrocViewModels.WroMovieEventDetailsViewModel

@{
	ViewData["Title"] = "GetMovieEventDetails";
}

<div class="row" style="padding: 10px 10px 10px 10px">
	<div class="col-md-5">
		<div class="box box-default">
			<div class="box-header with-border">
				<h3 class="box-title">@Model.Title</h3>
			</div>
			<div class="box-body">
				<img src="@Model.Photo" style="width: 100%; height:100%;" />
			</div>
		</div>
	</div>
	<div class="col-md-7">
		<div class="box box-success">
			<div class="box-header with-border">
				<h3 class="box-title">Details</h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				@Html.Raw(Model.LongDescription)
				<div>
					@foreach (var item in Model.Categories)
					{
						<span class="label label-success">@item</span>
					}
				</div>
			</div>
			<!-- /.box-body -->
		</div>
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title">Cinemas</h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				@foreach (var item in Model.MovieDetails)
				{
					<strong><i class="fa fa-film margin-r-5"></i> @item.Key</strong>

					<p class="text-muted">
						@foreach (var value in item.Value)
						{
							<a href="@value.PageLink" style="margin-left: 10px;">
								@value.Time
							</a>}
					</p>

					<hr>
				}
			</div>
			<!-- /.box-body -->
		</div>

	</div>

</div>
